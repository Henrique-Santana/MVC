@model RoleTopMVC.ViewModels.AgendamentoViewModel
<main>
    <h2>Agendamento</h2>
<form method="POST" action='@Url.Action("Registrar","Agendamento")'>
        <div>
            <label for="nome">Nome Completo</label>
            <br />
            <input id="nome" type="text" maxlength="20" minlength="3" value="@Model.Cliente.Nome" name="nome"/>
        </div>
        <div>
            <label for="endereco">Seu Endereço</label>
            <br />
            <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco" />
        </div>
        <div>
            <label for="telefone">Telefone para contato</label>
            <br />
            <input id="telefone" type="text" maxlength="12" minlength="10" value="@Model.Cliente.Telefone" name="telefone"/>
        </div>
        <div>
            <label for="dia-do-evento">Dia do Evento</label>
            <br />
            <input id="dia-do-evento" type="date" maxlength="12" minlength="10" name="data"/>
        </div>
        <div>
            <label for="email">E-mail</label>
            <br />
            <input id="email" type="email" maxlength="20" minlength="8" value="@Model.Cliente.Email" name="email"/>
        </div>
        <div>
                <label for="cpf">CPF</label>
                <br />
                <input id="cpf" type="text" maxlength="12" minlength="8" value="@Model.Cliente.Cpf" name="cpf" />
        </div>
        <div class="selecionaveis">
            <div>
                <label for="modo-de-pagamento">Modo de Pagamento</label>
                <br/>
                <select id="modo-de-pagamento" name="tipoPagamento" required>
                    <option value="" disabled selected>Selecione</option>
                    <option value="Depósito">Depósito</option>
                    <option value="Cartão">Cartão</option>
                </select>
            </div>
            <div>
                <label for="tipo-de-evento">Tipo de Evento</label>
                <br/>
                <select id="tipo-de-evento" name="tipoEvento">
                    <option value="" disabled selected>Selecione</option>
                    <option>Casamento</option>
                    <option>Aniversario</option>
                    <option>Show</option>
                </select>
            </div>
            <div>
                        <label for="opcionais1">Opcional 1</label>
                        <br/>
                        <select id="opcionais" name="opcional1">
                            <option value="" disabled selected>Selecione</option>
                            <option>NENHUM</option>
                            <option>SOM</option>
                            <option>Iluminação</option>
                        </select>
                    </div>
                    <div>
                        <label for="opcionais2">Opcional 2</label>
                        <br/>
                        <select id="opcionais" name="opcional2">
                            <option value="" disabled selected>Selecione</option>
                            <option>NENHUM</option>
                            <option>SOM</option>
                            <option>Iluminação</option>
                        </select>
                    </div>
        </div>
        <input type="submit" value="Agendar" />
    </form>
</main>